<% if @existing_contact %><h1>This Applicant is already in Contacts</h1><% end %>

<p><b>First Name:</b> <%= contact.first_name %></p>
<p><b>Last Name:</b> <%= contact.last_name %></p>
<% unless contact.pronouns.blank? %><p><b>Pronouns:</b> <%= contact.pronouns %></p><% end %>

<% unless contact.personal_phone.blank? %>
<p>
  <b>Cell Phone:</b> <%= contact.personal_phone %>
  <a href="sms:<%= contact.personal_phone%>">Text</a> |
  <a href="tel:<%= contact.personal_phone%>">Call</a>
  </p>
<% end %>

<% unless contact.personal_email.blank? %>
  <p>
    <b>Personal Email:</b> <%= mail_to contact.personal_email, contact.personal_email %>
  </p>
<% end %>

<% unless contact.work_username.blank? %><p><b>Work Username:</b> <%= contact.work_username %></p><% end %>
<% unless contact.work_email.blank? %><p><b>Work Email:</b> <%= contact.work_email %></p><% end %>

<% if assessment = contact.current_assessment %>
  <p><b>Assessment:</b> <%= assessment.assessment_level.level %> (as of <%= assessment.assessed_on %> by <%= assessment.assessor.first_name %>)</p>
<% end%>
