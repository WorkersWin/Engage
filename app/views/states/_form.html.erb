<%= form_with(model: state) do |form| %>
  <% if state.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
        <% state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :country, style: "display: block" %>
    <%= collection_select(:state, :country_id, Country.all.order(:name), :id, :name) %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :usps, style: "display: block" %>
    <%= form.text_field :usps %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
