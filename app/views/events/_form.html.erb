<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "label" %>
    <div class="control">
    <%= form.text_field :name, autofocus: true, placeholder: "Event Name", class: "input" %>
  </div>
  </div>

  <div class="field">
    <%= form.label :start_datetime, class: "label" %>
    <div class="control">
    <%= form.datetime_field :start_datetime, class: "input" %>
  </div>
  </div>

  <div class="field">
    <%= form.label :end_datetime, class: "label" %>
    <div class="control">
    <%= form.datetime_field :end_datetime, class: "input" %>
  </div>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <div class="control">
    <%= form.text_area :description, placeholder: "Event Description", class: "input" %>
  </div>
  </div>

  <div class="field">
    <%= form.label :event_type_id, class: "label" %>
    <div class="control">
    <div class="select">
    <%= collection_select(:event, :event_type_id, EventType.all.order(:name), :id, :name, {include_blank: true}, {}) %>
  </div>
  </div>
  </div>

  <div class="field">
  <div class="control">
    <%= form.submit "Submit", class: "button is-link" %>
  </div>
  </div>
<% end %>
