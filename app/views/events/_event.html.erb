<tr>
  <td>
    <%= link_to event.name, event %>
  </td>
  <td>
    <%= link_to event.event_type.name, event.event_type %>
  </td>

  <td><% unless event.start_datetime.blank? %>
    <%= link_to event.start_datetime, event %>
    <% end %>
  </td>

  <td><% unless event.end_datetime.blank? %>
    <%= link_to event.end_datetime, event %>
    <% end %>
  </td>

  <td>
    <% unless event.description.blank? %>
    <%= link_to event.description, event %>
    <% end %>
  </td>
</tr>
